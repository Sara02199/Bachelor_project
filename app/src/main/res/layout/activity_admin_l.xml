<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDD0"
    android:padding="50dp"
    tools:context=".AdminL">

    <TextView
        android:id="@+id/titsi"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Admin Sign in page "
        android:textSize="40dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iView7"
        android:layout_width="369dp"
        android:layout_height="94dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/baseline_person_outline_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@+id/titsi" />

    <EditText
        android:id="@+id/admname1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User Name"
        android:inputType="textPersonName"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/iView7" />
    <EditText
        android:id="@+id/admpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="numberPassword"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/admname1" />

    <Button
        android:id="@+id/adsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in "
        android:layout_marginTop="20dp"
        android:backgroundTint="#d4b781"
        android:textColor="@color/black"
        android:layout_below="@+id/admpassword"/>
</RelativeLayout>




