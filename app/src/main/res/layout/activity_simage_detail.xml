<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDD0"
    android:padding="50dp"
    tools:context=".SImageDetail">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivpr"
                android:layout_width="331dp"
                android:layout_height="288dp"
                android:src="@drawable/fffffffpvfffff" />
            <TextView
                android:id="@+id/tvinfo2"
                android:layout_width="302dp"
                android:layout_height="204dp"
                android:layout_below="@+id/ivpr"
                android:layout_marginTop="0dp"
                android:text="Zaatar has a number of outstanding health benefits, like being able to boost the immune system, improve skin health, build strong bones, improve circulation, clear out the airways, ease inflammation, give you more energy, improve your mood, help you remember things, and treat chronic diseases."
                android:textAlignment="center"
                android:textColor="#024A05"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/tvpprice02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="0.700"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/add2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvpprice02"
                android:layout_marginTop="22dp"
                android:backgroundTint="#d4b781"
                android:textColor="@color/black"
                android:text="Go back to view products" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>