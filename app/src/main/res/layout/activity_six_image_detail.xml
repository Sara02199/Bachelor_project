<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDD0"
    android:padding="50dp"
    tools:context=".SixImageDetail">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ive6"
                android:layout_width="331dp"
                android:layout_height="288dp"
                android:src="@drawable/fffpv" />
            <TextView
                android:id="@+id/tvi6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ive6"
                android:text="Rasel having antioxidants and anti-bacterial properties, basil helps maintain skin health, boosts digestion and detoxifies the body. It also helps in the prevention and cure of diseases like cancer, diabetes and other heart conditions. Fresh basil contains Vitamin A, Vitamin K, Iron, Manganese, Calcium, and essential oils.   "
                android:textAlignment="center"
                android:textColor="#024A05"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tve7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvi6"
                android:text="0.500"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/add6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tve7"
                android:backgroundTint="#d4b781"
                android:textColor="@color/black"
                android:text="Go back to view products" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>